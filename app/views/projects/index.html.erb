<div class="container">
  <!-- Example row of columns -->
  <div class="row">

  	<% @projects.each do |project| %>
	<div class="col-md-4">
	  <div class="well well-project">
	      <div class="well-project-title"><%= project.title.upcase %></div>
	      <div class="well-project-todo">
	      	<ul>
	      	<% project.todos.each do |todo| %>
				<li>
					<input data-id=<%= todo.id %> type="checkbox" <%= todo.isCompleted ? 'checked' : '' %>/>
					<span><%= todo.text %></span>
				</li>
			<% end %>
			</ul>
		  </div>
	  </div>
    </div>
	<% end %>

  </div>
</div>

<div class="modal modal-todo fade bs-example-modal-sm" role="dialog">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-todo-title">Новая задача</div>
    <%= form_for @todo, url: {action: "create"}, html: {class: "nifty_form", "data-submited": (request.post? ? 1 : 0) } do |f| %>
	  <div>
	  	  <div class="form-group">
		  	<%= f.text_field :text, class: 'form-control input-sm form-control-todo', placeholder: 'Введите задачу' %>
		  	<% if @todo.errors.messages[:text] %>
		  		<span class="help-block"><%= @todo.errors.messages[:text].first %></span>
		  	<% end %>
		  </div>

		  <%= f.select :project_id, Project.all.collect {|c| [ c.title, c.id ] } %>
	  </div>

	  <div class="modal-actions">
		  <a class="btn btn-todo btn-cancel" href="#" data-dismiss="modal">Отмена</a>
		  <button class="btn btn-todo" type="submit">Ok</button>
	  </div>
	<% end %>


    </div>
  </div>
</div>
